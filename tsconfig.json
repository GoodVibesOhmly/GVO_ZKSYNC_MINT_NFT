{
  "$schema": "https://json.schemastore.org/tsconfig",
  "compilerOptions": {
    "allowJs": true,
    "baseUrl": "./src",
    "checkJs": false,
    "declaration": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "lib": [
      "es2019",
      "dom",
      "es2019.object",
      "esnext",
      "esnext.asynciterable"
    ],
    "module": "esnext",
    "moduleResolution": "node",
    "noEmit": true,
    "noImplicitAny": true,
    "paths": {
      "~/*": [
        "./*"
      ],
      "@/*": [
        "./*"
      ]
    },
    "suppressImplicitAnyIndexErrors": true,
    "resolveJsonModule": true,
    "sourceMap": true,
    "strict": true,
    "target": "ESNext",
    "types": [
      "@nuxt/types",
      "@nuxt/http",
      "@inkline/inkline/types",
      "vuex",
      "@types/nuxt",
      "@types/node",
      "@nuxtjs/sentry",
      "@types/jest",
      "@nuxtjs/toast",
      "web3-core/types",
      "typed-vuex",
      "oh-vue-icons/types"
    ]
  },
  "exclude": [
    "node_modules/*",
    "dist/*",
    ".yarn/*",
    "public/*",
    ".nuxt/*",
    ".github/*",
    "environments/*",
    "tests/*"
  ]
}
